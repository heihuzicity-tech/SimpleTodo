{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ZeTodo",
  "version": "0.1.0",
  "identifier": "com.zetodo.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ZeTodo - 高效任务管理",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "高效的看板式任务管理工具",
    "longDescription": "ZeTodo 是一款现代化的看板式任务管理桌面应用，支持多项目管理、拖拽排序、深色模式等功能。",
    "category": "Productivity",
    "copyright": "Copyright © 2025 ZeTodo"
  }
}
